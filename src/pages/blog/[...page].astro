---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import type { GetStaticPathsOptions } from 'astro';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

export async function getStaticPaths({ paginate }: GetStaticPathsOptions) {
	const posts = (await getCollection('blog')).sort(
		(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
	);
	return paginate(posts, { pageSize: 20 });
}

const { page } = Astro.props;
const posts = page.data;

const pageTitle = page.currentPage === 1
	? SITE_TITLE
	: `${SITE_TITLE} - ページ ${page.currentPage}`;
const pageDescription = page.currentPage === 1
	? SITE_DESCRIPTION
	: `${SITE_DESCRIPTION} (ページ ${page.currentPage}/${page.lastPage})`;

// Build page number list with ellipsis logic
function buildPageNums(current: number, last: number): Array<number | '...'> {
	const pages: Array<number | '...'> = [];
	for (let i = 1; i <= last; i++) {
		if (i === 1 || i === last || Math.abs(i - current) <= 2) {
			pages.push(i);
		} else if (pages[pages.length - 1] !== '...') {
			pages.push('...');
		}
	}
	return pages;
}

const pageNums = buildPageNums(page.currentPage, page.lastPage);
---

<!doctype html>
<html lang="ja">
	<head>
		<BaseHead title={pageTitle} description={pageDescription} />
		{page.url.prev && <link rel="prev" href={page.url.prev} />}
		{page.url.next && <link rel="next" href={page.url.next} />}
		<style>
			main {
				width: 960px;
			}
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				width: calc(50% - 1rem);
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			ul li:first-child {
				width: 100%;
				margin-bottom: 1rem;
				text-align: center;
			}
			ul li:first-child img {
				width: 100%;
			}
			ul li:first-child .title {
				font-size: 2.369rem;
			}
			ul li img {
				margin-bottom: 0.5rem;
				border-radius: 12px;
			}
			ul li a {
				display: block;
			}
			.title {
				margin: 0;
				color: rgb(var(--black));
				line-height: 1;
			}
			.date {
				margin: 0;
				color: rgb(var(--gray));
			}
			ul li a:hover h4,
			ul li a:hover .date {
				color: rgb(var(--accent));
			}
			ul a:hover img {
				box-shadow: var(--box-shadow);
			}
			@media (max-width: 720px) {
				ul {
					gap: 0.5em;
				}
				ul li {
					width: 100%;
					text-align: center;
				}
				ul li:first-child {
					margin-bottom: 0;
				}
				ul li:first-child .title {
					font-size: 1.563em;
				}
			}
			.pagination {
				display: flex;
				align-items: center;
				justify-content: center;
				gap: 0.5rem;
				margin-top: 3rem;
				flex-wrap: wrap;
			}
			.pagination a,
			.pagination .pg-current,
			.pagination .pg-dots {
				display: inline-flex;
				align-items: center;
				justify-content: center;
				min-width: 2.5rem;
				height: 2.5rem;
				padding: 0 0.75rem;
				border-radius: 6px;
				font-size: 0.9rem;
				font-weight: 500;
				text-decoration: none;
				transition: background 0.15s, color 0.15s;
			}
			.pagination a {
				border: 1px solid rgb(var(--gray-light));
				color: rgb(var(--black));
			}
			.pagination a:hover {
				background: rgb(var(--accent));
				border-color: rgb(var(--accent));
				color: white;
			}
			.pagination .pg-current {
				background: rgb(var(--accent));
				border: 1px solid rgb(var(--accent));
				color: white;
				font-weight: 700;
			}
			.pagination .pg-dots {
				color: rgb(var(--gray));
				pointer-events: none;
			}
			.pagination-info {
				text-align: center;
				margin-top: 1rem;
				font-size: 0.85rem;
				color: rgb(var(--gray));
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<ul>
					{
						posts.map((post) => (
							<li>
								<a href={`/blog/${post.id}/`}>
									{post.data.heroImage && (
										<Image width={720} height={360} src={post.data.heroImage} alt="" />
									)}
									<h4 class="title">{post.data.title}</h4>
									<p class="date">
										<FormattedDate date={post.data.pubDate} />
									</p>
								</a>
							</li>
						))
					}
				</ul>
			</section>

			{page.lastPage > 1 && (
				<nav aria-label="ページナビゲーション">
					<div class="pagination">
						{page.url.prev && (
							<a href={page.url.prev} aria-label="前のページ">&laquo; 前へ</a>
						)}
						{pageNums.map((p) =>
							p === '...'
								? <span class="pg-dots">…</span>
								: p === page.currentPage
									? <span class="pg-current" aria-current="page">{p}</span>
									: <a href={p === 1 ? '/blog' : `/blog/${p}`}>{p}</a>
						)}
						{page.url.next && (
							<a href={page.url.next} aria-label="次のページ">次へ &raquo;</a>
						)}
					</div>
					<p class="pagination-info">
						全 {page.total} 記事 &mdash; {page.currentPage} / {page.lastPage} ページ
					</p>
				</nav>
			)}
		</main>
		<Footer />
	</body>
</html>
