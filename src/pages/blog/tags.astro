---
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import Header from '../../components/Header.astro';

const posts = await getCollection('blog');

// Build tag frequency map
const tagCount = new Map<string, number>();
posts.forEach((post) => {
	(post.data.tags ?? []).forEach((tag: string) => {
		tagCount.set(tag, (tagCount.get(tag) ?? 0) + 1);
	});
});

// Sort tags by count desc
const sortedTags = Array.from(tagCount.entries()).sort((a, b) => b[1] - a[1]);

const title = 'タグ一覧 — TechBoost Blog';
const description = 'TechBoost Blogの全タグ一覧。フロントエンド・バックエンド・DevOps・AI・セキュリティなど技術カテゴリで記事を探せます。';
---

<!doctype html>
<html lang="ja">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			main {
				width: 960px;
			}
			h1 {
				margin-bottom: 0.5rem;
			}
			.subtitle {
				color: rgb(var(--gray));
				margin-bottom: 2rem;
			}
			.tags-grid {
				display: flex;
				flex-wrap: wrap;
				gap: 0.75rem;
			}
			.tag-chip {
				display: inline-flex;
				align-items: center;
				gap: 0.375rem;
				padding: 0.375rem 0.875rem;
				border-radius: 999px;
				background: rgb(var(--gray-light));
				color: rgb(var(--black));
				text-decoration: none;
				font-size: 0.9rem;
				font-weight: 500;
				transition: background 0.15s, color 0.15s;
			}
			.tag-chip:hover {
				background: rgb(var(--accent));
				color: white;
			}
			.tag-count {
				font-size: 0.75rem;
				font-weight: 400;
				opacity: 0.7;
			}
			.back-link {
				display: inline-block;
				margin-bottom: 1.5rem;
				color: rgb(var(--accent));
				text-decoration: none;
				font-size: 0.9rem;
			}
			.back-link:hover {
				text-decoration: underline;
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<a href="/blog" class="back-link">&larr; 記事一覧へ戻る</a>
			<h1>タグ一覧</h1>
			<p class="subtitle">全 {sortedTags.length} タグ</p>
			<div class="tags-grid">
				{sortedTags.map(([tag, count]) => (
					<a href={`/blog/tag/${encodeURIComponent(tag)}`} class="tag-chip">
						#{tag}
						<span class="tag-count">({count})</span>
					</a>
				))}
			</div>
		</main>
		<Footer />
	</body>
</html>
